<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Compra peliculas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .inicio{
            width: 20rem;
        }
        .centrado{
            padding-top: 20px;
            padding-left: 200px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="centrado">
        <div class="col-sm-12">
            <div class="card inicio">
                <div class="card-header text-center">
                    Inicio de sesion
                </div>
                <div class="card-body">
                    <div class="text-center">
                    <%const existeMensaje=mensaje%>
                    <%if(existeMensaje){%>
                        <span class="text-warning"><%=mensaje%></span>
                    <%}%>
                    </div>
                    <form action="/api/ingreso" method="post">
                        <div class="form-group">
                            <label for="inputUsuario">Usuario</label>
                            <input type="email" class="form-control" id="inputUsuario" name="correoUsuario">
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Contrase√±a</label>
                            <input type="password" class="form-control" id="inputPassword" name="password">
                        </div>
                        <!--<div class="form-group">
                            <label for="selectRol">Rol</label>
                            <select class="form-control" name="tipoRol" id="selectRol">
                                <option value="1">Administrador</option>
                                <option value="2">Usuario</option>
                            </select>
                        </div>-->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>

                    </form>

                </div>
                <div class="card-footer text-center">
                    <a href="/api/registro">Registrarse</a>
                </div>
            </div>

        </div>
    </div>
</div>

</body>
</html>